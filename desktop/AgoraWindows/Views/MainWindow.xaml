<Window x:Class="AgoraWindows.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agora" Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- User header -->
                <Border DockPanel.Dock="Top" Padding="16,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock x:Name="UserDisplayName" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" />
                        <TextBlock x:Name="UserStatus" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,0" />
                    </StackPanel>
                </Border>

                <!-- Channel list header -->
                <Border DockPanel.Dock="Top" Padding="16,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <TextBlock Text="Chats" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" />
                </Border>

                <!-- Channel list -->
                <ListBox x:Name="ChannelList" BorderThickness="0"
                         SelectionChanged="ChannelList_SelectionChanged"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,6">
                                <DockPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding UnreadCount}" FontSize="11"
                                               Foreground="White" Background="{StaticResource PrimaryBrush}"
                                               Padding="4,1" HorizontalAlignment="Right"
                                               Visibility="{Binding UnreadCount, Converter={x:Static local:Converters.IntToVisibility}}" />
                                </DockPanel>
                                <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="{Binding MemberCount}" /><Run Text=" Mitglieder" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Main content area -->
        <Grid Grid.Column="1">
            <!-- Empty state -->
            <StackPanel x:Name="EmptyState" VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Willkommen bei Agora" FontSize="20" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Waehle einen Chat aus der Liste" FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,8,0,0" />
            </StackPanel>

            <!-- Chat view -->
            <Grid x:Name="ChatView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Chat header -->
                <Border Grid.Row="0" Padding="16,12" Background="White"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <TextBlock x:Name="ChatTitle" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" />
                </Border>

                <!-- Messages -->
                <ScrollViewer Grid.Row="1" x:Name="MessageScroll"
                              VerticalScrollBarVisibility="Auto" Padding="16">
                    <ItemsControl x:Name="MessageList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4" Padding="8,6" Background="White"
                                        CornerRadius="6">
                                    <StackPanel>
                                        <DockPanel>
                                            <TextBlock Text="{Binding SenderName}" FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource PrimaryBrush}" />
                                            <TextBlock Text="{Binding CreatedAt}" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center" />
                                        </DockPanel>
                                        <TextBlock Text="{Binding Content}" FontSize="13"
                                                   TextWrapping="Wrap" Margin="0,4,0,0"
                                                   Foreground="{StaticResource TextPrimaryBrush}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Message input -->
                <Border Grid.Row="2" Padding="12" Background="White"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="Senden"
                                Style="{StaticResource PrimaryButton}"
                                Click="SendButton_Click" Margin="8,0,0,0"
                                Height="34" Padding="16,0" />
                        <TextBox x:Name="MessageInput" Padding="8,6" FontSize="13"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 KeyDown="MessageInput_KeyDown"
                                 AcceptsReturn="False" />
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
